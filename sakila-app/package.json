{
  "name": "sakila-app",
  "version": "1.0.0",
  "description": "",
  "main": "app.js",
  "scripts": {
    "start": "node app.js",
    "dev": "nodemon app.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:cypress": "cypress run",
    "test:cypress:headed": "cypress run --headed",
    "test:cypress:open": "cypress open",
    "test:ci": "cypress run --browser chrome --headless --record false",
    "test:smoke": "cypress run --spec 'cypress/e2e/dashboard.cy.js'",
    "test:server": "cypress run --spec 'cypress/e2e/server-integration.cy.js'",
    "test:rentals": "cypress run --spec 'cypress/e2e/rental-actions.cy.js'",
    "test:ui": "cypress run --spec 'cypress/e2e/ui-components.cy.js'",
    "test:all": "cypress run --browser chrome --headless"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^6.0.0",
    "bcryptjs": "^3.0.2",
    "cookie-parser": "^1.4.7",
    "dotenv": "^17.2.2",
    "ejs": "^3.1.10",
    "express": "^5.1.0",
    "express-session": "^1.18.2",
    "jsonwebtoken": "^9.0.2",
    "mysql2": "^3.14.4",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@jest/globals": "^30.1.2",
    "cypress": "^15.2.0",
    "jest": "^30.1.3",
    "nodemon": "^3.1.10"
  },
  "jest": {
    "testEnvironment": "node",
    "roots": ["<rootDir>/src", "<rootDir>/tests"],
    "testMatch": ["**/__tests__/**/*.js", "**/?(*.)+(spec|test).js"],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/config/**",
      "!src/public/**",
      "!src/views/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": ["text", "lcov", "html"]
  }
}
