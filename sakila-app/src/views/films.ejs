<!DOCTYPE html>
<html lang="nl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Films - Sakila App</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet">
    <link href="/css/style.css" rel="stylesheet">
</head>
<body class="bg-light">
    <%- include('partials/navbar') %>
    
    <div class="container mt-4">
        <!-- Page Header -->
        <div class="row mb-4">
            <div class="col-12">
                <h1 class="h2 mb-3">
                    <i class="bi bi-collection-play"></i>
                    Filmcollectie
                </h1>
                <p class="text-muted">Ontdek onze uitgebreide collectie films</p>
            </div>
        </div>

        <!-- Search and Filter Section -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">
                            <i class="bi bi-funnel"></i> Zoeken en Filteren
                        </h5>
                    </div>
                    <div class="card-body">
                        <form method="GET" action="/films" class="row g-3">
                            <!-- Search Input -->
                            <div class="col-md-6">
                                <label for="search" class="form-label">Zoeken</label>
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <i class="bi bi-search"></i>
                                    </span>
                                    <input type="text" 
                                           class="form-control" 
                                           id="search" 
                                           name="search" 
                                           placeholder="Zoek films op titel, beschrijving of acteur..."
                                           value="<%= typeof search !== 'undefined' ? search : '' %>">
                                </div>
                            </div>
                            
                            <!-- Category Filter -->
                            <div class="col-md-3">
                                <label for="category" class="form-label">Categorie</label>
                                <select class="form-select" id="category" name="category">
                                    <option value="">Alle categorieën</option>
                                    <% if (typeof categories !== 'undefined' && categories) { %>
                                        <% categories.forEach(function(category) { %>
                                            <option value="<%= category.category_id %>" 
                                                    <%= typeof selectedCategory !== 'undefined' && selectedCategory == category.category_id ? 'selected' : '' %>>
                                                <%= category.name %>
                                            </option>
                                        <% }); %>
                                    <% } %>
                                </select>
                            </div>
                            
                            <!-- Rating Filter -->
                            <div class="col-md-3">
                                <label for="rating" class="form-label">Rating</label>
                                <select class="form-select" id="rating" name="rating">
                                    <option value="">Alle ratings</option>
                                    <option value="G" <%= typeof selectedRating !== 'undefined' && selectedRating === 'G' ? 'selected' : '' %>>G - Algemeen</option>
                                    <option value="PG" <%= typeof selectedRating !== 'undefined' && selectedRating === 'PG' ? 'selected' : '' %>>PG - Begeleiding</option>
                                    <option value="PG-13" <%= typeof selectedRating !== 'undefined' && selectedRating === 'PG-13' ? 'selected' : '' %>>PG-13 - 13+</option>
                                    <option value="R" <%= typeof selectedRating !== 'undefined' && selectedRating === 'R' ? 'selected' : '' %>>R - Beperkt</option>
                                    <option value="NC-17" <%= typeof selectedRating !== 'undefined' && selectedRating === 'NC-17' ? 'selected' : '' %>>NC-17 - 17+</option>
                                </select>
                            </div>
                            
                            <!-- Release Year Filter -->
                            <div class="col-md-3">
                                <label for="year" class="form-label">Jaar</label>
                                <select class="form-select" id="year" name="year">
                                    <option value="">Alle jaren</option>
                                    <% if (typeof years !== 'undefined' && years) { %>
                                        <% years.forEach(function(year) { %>
                                            <option value="<%= year.release_year %>" 
                                                    <%= typeof selectedYear !== 'undefined' && selectedYear == year.release_year ? 'selected' : '' %>>
                                                <%= year.release_year %>
                                            </option>
                                        <% }); %>
                                    <% } %>
                                </select>
                            </div>
                            
                            <!-- Length Filter -->
                            <div class="col-md-3">
                                <label for="length" class="form-label">Speelduur</label>
                                <select class="form-select" id="length" name="length">
                                    <option value="">Alle lengtes</option>
                                    <option value="short" <%= typeof selectedLength !== 'undefined' && selectedLength === 'short' ? 'selected' : '' %>>Kort (< 90 min)</option>
                                    <option value="medium" <%= typeof selectedLength !== 'undefined' && selectedLength === 'medium' ? 'selected' : '' %>>Gemiddeld (90-120 min)</option>
                                    <option value="long" <%= typeof selectedLength !== 'undefined' && selectedLength === 'long' ? 'selected' : '' %>>Lang (> 120 min)</option>
                                </select>
                            </div>
                            
                            <!-- Price Range Filter -->
                            <div class="col-md-3">
                                <label for="priceRange" class="form-label">Huurprijs</label>
                                <select class="form-select" id="priceRange" name="priceRange">
                                    <option value="">Alle prijzen</option>
                                    <option value="low" <%= typeof selectedPriceRange !== 'undefined' && selectedPriceRange === 'low' ? 'selected' : '' %>>€0.99 - €2.99</option>
                                    <option value="medium" <%= typeof selectedPriceRange !== 'undefined' && selectedPriceRange === 'medium' ? 'selected' : '' %>>€3.00 - €4.99</option>
                                    <option value="high" <%= typeof selectedPriceRange !== 'undefined' && selectedPriceRange === 'high' ? 'selected' : '' %>>€5.00+</option>
                                </select>
                            </div>
                            
                            <!-- Sort By -->
                            <div class="col-md-3">
                                <label for="sortBy" class="form-label">Sorteren op</label>
                                <select class="form-select" id="sortBy" name="sortBy">
                                    <option value="title" <%= typeof selectedSort !== 'undefined' && selectedSort === 'title' ? 'selected' : '' %>>Titel (A-Z)</option>
                                    <option value="title_desc" <%= typeof selectedSort !== 'undefined' && selectedSort === 'title_desc' ? 'selected' : '' %>>Titel (Z-A)</option>
                                    <option value="year" <%= typeof selectedSort !== 'undefined' && selectedSort === 'year' ? 'selected' : '' %>>Jaar (nieuw-oud)</option>
                                    <option value="year_desc" <%= typeof selectedSort !== 'undefined' && selectedSort === 'year_desc' ? 'selected' : '' %>>Jaar (oud-nieuw)</option>
                                    <option value="price" <%= typeof selectedSort !== 'undefined' && selectedSort === 'price' ? 'selected' : '' %>>Prijs (laag-hoog)</option>
                                    <option value="price_desc" <%= typeof selectedSort !== 'undefined' && selectedSort === 'price_desc' ? 'selected' : '' %>>Prijs (hoog-laag)</option>
                                    <option value="length" <%= typeof selectedSort !== 'undefined' && selectedSort === 'length' ? 'selected' : '' %>>Speelduur (kort-lang)</option>
                                    <option value="length_desc" <%= typeof selectedSort !== 'undefined' && selectedSort === 'length_desc' ? 'selected' : '' %>>Speelduur (lang-kort)</option>
                                </select>
                            </div>
                            
                            <!-- Action Buttons -->
                            <div class="col-12">
                                <div class="d-flex gap-2 flex-wrap">
                                    <button type="submit" class="btn btn-primary">
                                        <i class="bi bi-funnel"></i> Filter Toepassen
                                    </button>
                                    <a href="/films" class="btn btn-outline-secondary">
                                        <i class="bi bi-arrow-clockwise"></i> Reset Filters
                                    </a>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <!-- Results Info -->
        <% if (typeof pagination !== 'undefined' && pagination) { %>
            <div class="row mb-3">
                <div class="col-12">
                    <p class="text-muted">
                        <%= pagination.total %> film(s) gevonden
                        <% if (typeof search !== 'undefined' && search) { %>
                            voor "<%= search %>"
                        <% } %>
                    </p>
                </div>
            </div>
        <% } %>

        <!-- Films Grid -->
        <% if (typeof films !== 'undefined' && films && films.length > 0) { %>
            <div class="row g-4 mb-5">
                <% films.forEach(function(film) { %>
                    <div class="col-md-6 col-lg-4 col-xl-3">
                        <div class="card h-100 shadow-sm feature-card">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-start mb-2">
                                    <h5 class="card-title mb-0" title="<%= film.title %>">
                                        <%= film.title.length > 20 ? film.title.substring(0, 20) + '...' : film.title %>
                                    </h5>
                                    <span class="badge bg-primary"><%= film.rating || 'N/A' %></span>
                                </div>
                                
                                <div class="mb-2">
                                    <small class="text-muted">
                                        <i class="bi bi-tag"></i> <%= film.category_name || 'Algemeen' %> | 
                                        <i class="bi bi-calendar"></i> <%= film.release_year || 'N/A' %>
                                    </small>
                                </div>
                                
                                <p class="card-text text-muted small">
                                    <%= (film.description || '').substring(0, 100) %><%= (film.description || '').length > 100 ? '...' : '' %>
                                </p>
                                
                                <% if (film.actors) { %>
                                    <div class="mb-2">
                                        <small class="text-muted">
                                            <i class="bi bi-person"></i> 
                                            <%= film.actors.length > 60 ? film.actors.substring(0, 60) + '...' : film.actors %>
                                        </small>
                                    </div>
                                <% } %>
                                
                                <div class="row text-center mb-3">
                                    <div class="col-6">
                                        <small class="text-muted">Duur</small>
                                        <div><strong><%= film.length || 'N/A' %> min</strong></div>
                                    </div>
                                    <div class="col-6">
                                        <small class="text-muted">Huurprijs</small>
                                        <div class="text-primary"><strong>€<%= film.rental_rate || '0.00' %></strong></div>
                                    </div>
                                </div>
                                
                                <div class="mb-3">
                                    <% if (film.available_copies > 0) { %>
                                        <span class="badge bg-success">
                                            <i class="bi bi-check-circle"></i> 
                                            <%= film.available_copies %> beschikbaar
                                        </span>
                                    <% } else { %>
                                        <span class="badge bg-danger">
                                            <i class="bi bi-x-circle"></i> 
                                            Uitverhuurd
                                        </span>
                                    <% } %>
                                    
                                    <small class="text-muted d-block mt-1">
                                        <%= film.total_copies || 0 %> totaal beschikbaar
                                    </small>
                                </div>
                            </div>
                            
                            <div class="card-footer bg-transparent">
                                <div class="d-grid gap-2">
                                    <a href="/films/<%= film.film_id %>" class="btn btn-outline-primary btn-sm">
                                        <i class="bi bi-eye"></i> Details
                                    </a>
                                    <!-- <% if (film.available_copies > 0) { %>
                                        <% if (typeof user !== 'undefined' && user) { %>
                                            <button class="btn btn-primary btn-sm" 
                                                    data-film-id="<%= film.film_id %>"
                                                    onclick="rentFilm('<%= film.film_id %>', '<%= film.title %>')">
                                                <i class="bi bi-cart-plus"></i> Huren
                                            </button>
                                        <% } else { %>
                                            <a href="/login?redirect=/films/<%= film.film_id %>" class="btn btn-primary btn-sm">
                                                <i class="bi bi-box-arrow-in-right"></i> Login om te huren
                                            </a>
                                        <% } %>
                                    <% } else { %>
                                        <button class="btn btn-secondary btn-sm" disabled>
                                            <i class="bi bi-clock"></i> Niet beschikbaar
                                        </button>
                                    <% } %> -->
                                </div>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>
        <% } else { %>
            <div class="row">
                <div class="col-12">
                    <div class="alert alert-info text-center">
                        <i class="bi bi-info-circle"></i>
                        <h4>Geen films gevonden</h4>
                        <p class="mb-0">
                            <% if (typeof search !== 'undefined' && search) { %>
                                Geen films gevonden voor "<%= search %>". Probeer een andere zoekterm.
                            <% } else { %>
                                Er zijn momenteel geen films beschikbaar.
                            <% } %>
                        </p>
                        <a href="/films" class="btn btn-outline-primary mt-2">
                            <i class="bi bi-arrow-left"></i> Alle films bekijken
                        </a>
                    </div>
                </div>
            </div>
        <% } %>

        <!-- Pagination -->
        <% if (typeof pagination !== 'undefined' && pagination && pagination.totalPages > 1) { %>
            <%
            // Helper function to build query string with all current filters
            function buildQueryString(page) {
                let params = [`page=${page}`];
                if (typeof search !== 'undefined' && search) params.push(`search=${encodeURIComponent(search)}`);
                if (typeof selectedCategory !== 'undefined' && selectedCategory) params.push(`category=${selectedCategory}`);
                if (typeof selectedRating !== 'undefined' && selectedRating) params.push(`rating=${selectedRating}`);
                if (typeof selectedYear !== 'undefined' && selectedYear) params.push(`year=${selectedYear}`);
                if (typeof selectedLength !== 'undefined' && selectedLength) params.push(`length=${selectedLength}`);
                if (typeof selectedPriceRange !== 'undefined' && selectedPriceRange) params.push(`priceRange=${selectedPriceRange}`);
                if (typeof selectedSort !== 'undefined' && selectedSort) params.push(`sortBy=${selectedSort}`);
                return '?' + params.join('&');
            }
            %>
            <div class="row mt-4">
                <div class="col-12">
                    <nav aria-label="Films paginering">
                        <ul class="pagination justify-content-center">
                            <!-- Previous Button -->
                            <li class="page-item <%= pagination.page <= 1 ? 'disabled' : '' %>">
                                <a class="page-link" href="<%= buildQueryString(pagination.page - 1) %>">
                                    <i class="bi bi-chevron-left"></i> Vorige
                                </a>
                            </li>
                            
                            <!-- Page Numbers -->
                            <% 
                            const startPage = Math.max(1, pagination.page - 2);
                            const endPage = Math.min(pagination.totalPages, pagination.page + 2);
                            %>
                            
                            <% if (startPage > 1) { %>
                                <li class="page-item">
                                    <a class="page-link" href="<%= buildQueryString(1) %>">1</a>
                                </li>
                                <% if (startPage > 2) { %>
                                    <li class="page-item disabled">
                                        <span class="page-link">...</span>
                                    </li>
                                <% } %>
                            <% } %>
                            
                            <% for (let i = startPage; i <= endPage; i++) { %>
                                <li class="page-item <%= i === pagination.page ? 'active' : '' %>">
                                    <a class="page-link" href="<%= buildQueryString(i) %>">
                                        <%= i %>
                                    </a>
                                </li>
                            <% } %>
                            
                            <% if (endPage < pagination.totalPages) { %>
                                <% if (endPage < pagination.totalPages - 1) { %>
                                    <li class="page-item disabled">
                                        <span class="page-link">...</span>
                                    </li>
                                <% } %>
                                <li class="page-item">
                                    <a class="page-link" href="<%= buildQueryString(pagination.totalPages) %>">
                                        <%= pagination.totalPages %>
                                    </a>
                                </li>
                            <% } %>
                            
                            <!-- Next Button -->
                            <li class="page-item <%= pagination.page >= pagination.totalPages ? 'disabled' : '' %>">
                                <a class="page-link" href="<%= buildQueryString(pagination.page + 1) %>">
                                    Volgende <i class="bi bi-chevron-right"></i>
                                </a>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
        <% } %>
    </div>
    <!-- Separated footer from the container -->
    <div>
        <%- include('partials/footer') %>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- Auto-submit form on category change -->
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const filterIds = ['category', 'rating', 'year', 'length', 'priceRange', 'sortBy'];
            filterIds.forEach(function(id) {
                const el = document.getElementById(id);
                if (el) {
                    el.addEventListener('change', function() {
                        this.form.submit();
                    });
                }
            });
        });
    </script>
    
    <!-- Film rental handling -->
    <script>
        function rentFilm(filmId, filmTitle) {
            if (confirm(`Weet je zeker dat je "${filmTitle}" wilt huren?`)) {
                // In een echte applicatie zou dit een AJAX call zijn naar de server
                fetch(`/films/${filmId}/rent`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ filmId: filmId })
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        alert(`"${filmTitle}" is succesvol gehuurd!`);
                        location.reload(); // Refresh om beschikbaarheid bij te werken
                    } else {
                        alert(`Fout bij het huren: ${data.message}`);
                    }
                })
                .catch(error => {
                    console.error('Fout:', error);
                    alert('Er is een fout opgetreden bij het huren van de film.');
                });
            }
        }
    </script>
</body>
</html>
