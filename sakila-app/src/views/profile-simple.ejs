<!DOCTYPE html>
<html lang="nl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet">
    <link href="/css/style.css" rel="stylesheet">
</head>
<body class="bg-light">
    <%- include('partials/navbar') %>
    
    <div class="container mt-4">
        <!-- Breadcrumb -->
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/dashboard">Dashboard</a></li>
                <li class="breadcrumb-item active">Mijn Profiel</li>
            </ol>
        </nav>

        <!-- Success/Error Messages -->
        <% if (typeof success !== 'undefined' && success) { %>
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="bi bi-check-circle-fill"></i>
                <strong>Gelukt!</strong> <%= success %>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        <% } %>

        <% if (typeof error !== 'undefined' && error) { %>
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="bi bi-exclamation-triangle-fill"></i>
                <strong>Fout!</strong> <%= error %>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        <% } %>

        <div class="row">
            <!-- Profile Header Card -->
            <div class="col-12 mb-4">
                <div class="card shadow-sm bg-gradient" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                    <div class="card-body text-white">
                        <div class="row align-items-center">
                            <div class="col-auto">
                                <div class="avatar-circle bg-white text-primary d-flex align-items-center justify-content-center" 
                                     style="width: 80px; height: 80px; border-radius: 50%; font-size: 2rem;">
                                    <i class="bi bi-person-fill"></i>
                                </div>
                            </div>
                            <div class="col">
                                <h2 class="mb-1">
                                    <%= customer.first_name %> <%= customer.last_name %>
                                </h2>
                                <p class="mb-0 opacity-75">
                                    <i class="bi bi-envelope"></i> <%= customer.email %>
                                </p>
                                <p class="mb-0 opacity-75">
                                    <i class="bi bi-calendar"></i> 
                                    Klant sinds <%= customer.create_date ? new Date(customer.create_date).toLocaleDateString('nl-NL') : 'Onbekend' %>
                                </p>
                            </div>
                            <div class="col-auto">
                                <div class="text-end">
                                    <div class="badge bg-light text-dark fs-6 mb-2">
                                        <i class="bi bi-star-fill text-warning"></i>
                                        <%= customer.active ? 'Actief' : 'Inactief' %>
                                    </div>
                                    <br>
                                    <small class="opacity-75">Customer ID: #<%= customer.customer_id %></small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Quick Stats -->
            <div class="col-12 mb-4">
                <div class="row g-3">
                    <div class="col-md-3">
                        <div class="card text-center h-100">
                            <div class="card-body">
                                <i class="bi bi-film fs-1 text-primary mb-2"></i>
                                <h4 class="text-primary"><%= customer.total_rentals || 0 %></h4>
                                <small class="text-muted">Totaal Gehuurd</small>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card text-center h-100">
                            <div class="card-body">
                                <i class="bi bi-clock-history fs-1 text-warning mb-2"></i>
                                <h4 class="text-warning"><%= customer.active_rentals || 0 %></h4>
                                <small class="text-muted">Actieve Verhuur</small>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card text-center h-100">
                            <div class="card-body">
                                <i class="bi bi-currency-euro fs-1 text-success mb-2"></i>
                                <h4 class="text-success">â‚¬<%= customer.total_payments || '0.00' %></h4>
                                <small class="text-muted">Totaal Uitgegeven</small>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card text-center h-100">
                            <div class="card-body">
                                <i class="bi bi-geo-alt fs-1 text-info mb-2"></i>
                                <h4 class="text-info"><%= customer.city || 'Onbekend' %></h4>
                                <small class="text-muted">Woonplaats</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Profile Edit Form -->
            <div class="col-lg-8 mb-4">
                <div class="card shadow-sm">
                    <div class="card-header bg-white">
                        <h5 class="mb-0">
                            <i class="bi bi-pencil-square text-primary"></i>
                            Persoonlijke Gegevens Bewerken
                        </h5>
                    </div>
                    <div class="card-body">
                        <form action="/profile" method="POST" id="profileForm">
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label for="first_name" class="form-label">
                                        <i class="bi bi-person"></i> Voornaam *
                                    </label>
                                    <input type="text" class="form-control form-control-lg" 
                                           id="first_name" name="first_name" 
                                           value="<%= customer.first_name %>" required>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label for="last_name" class="form-label">
                                        <i class="bi bi-person"></i> Achternaam *
                                    </label>
                                    <input type="text" class="form-control form-control-lg" 
                                           id="last_name" name="last_name" 
                                           value="<%= customer.last_name %>" required>
                                </div>
                            </div>
                            
                            <div class="mb-3">
                                <label for="email" class="form-label">
                                    <i class="bi bi-envelope"></i> Email Adres *
                                </label>
                                <input type="email" class="form-control form-control-lg" 
                                       id="email" name="email" 
                                       value="<%= customer.email %>" required>
                                <div class="form-text">
                                    Dit wordt ook gebruikt als je inlognaam
                                </div>
                            </div>

                            <div class="mb-3">
                                <label for="phone" class="form-label">
                                    <i class="bi bi-telephone"></i> Telefoonnummer
                                </label>
                                <input type="tel" class="form-control form-control-lg" 
                                       id="phone" name="phone" 
                                       value="<%= customer.phone || '' %>"
                                       placeholder="bijv. 06-12345678">
                            </div>

                            <div class="mb-4">
                                <label for="address" class="form-label">
                                    <i class="bi bi-geo-alt"></i> Adres
                                </label>
                                <input type="text" class="form-control form-control-lg" 
                                       id="address" name="address" 
                                       value="<%= customer.address || '' %>"
                                       placeholder="Straat + huisnummer">
                            </div>

                            <div class="d-flex justify-content-between">
                                <a href="/dashboard" class="btn btn-secondary">
                                    <i class="bi bi-arrow-left"></i> Terug naar Dashboard
                                </a>
                                <button type="submit" class="btn btn-primary btn-lg">
                                    <i class="bi bi-check-circle"></i> Wijzigingen Opslaan
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

            <!-- Account Info Sidebar -->
            <div class="col-lg-4">
                <div class="card shadow-sm mb-4">
                    <div class="card-header bg-light">
                        <h6 class="mb-0">
                            <i class="bi bi-shield-check text-success"></i>
                            Account Status
                        </h6>
                    </div>
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <span>Account Status:</span>
                            <span class="badge bg-<%= customer.active ? 'success' : 'danger' %>">
                                <%= customer.active ? 'Actief' : 'Inactief' %>
                            </span>
                        </div>
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <span>Winkel ID:</span>
                            <span class="text-muted">#<%= customer.store_id || 1 %></span>
                        </div>
                        <div class="d-flex justify-content-between align-items-center">
                            <span>Laatste Update:</span>
                            <span class="text-muted">
                                <%= customer.last_update ? new Date(customer.last_update).toLocaleDateString('nl-NL') : 'Onbekend' %>
                            </span>
                        </div>
                    </div>
                </div>

                <!-- Quick Actions -->
                <div class="card shadow-sm">
                    <div class="card-header bg-light">
                        <h6 class="mb-0">
                            <i class="bi bi-lightning-charge text-warning"></i>
                            Snelle Acties
                        </h6>
                    </div>
                    <div class="card-body">
                        <div class="d-grid gap-2">
                            <a href="/customer/rentals" class="btn btn-outline-primary">
                                <i class="bi bi-film"></i> Mijn Verhuur Bekijken
                            </a>
                            <a href="/customer/payments" class="btn btn-outline-success">
                                <i class="bi bi-receipt"></i> Betaalgeschiedenis
                            </a>
                            <a href="/films" class="btn btn-primary">
                                <i class="bi bi-search"></i> Films Zoeken
                            </a>
                            <hr>
                            <a href="/logout" class="btn btn-outline-danger">
                                <i class="bi bi-box-arrow-right"></i> Uitloggen
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include('partials/footer') %>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Form validation feedback
        document.getElementById('profileForm').addEventListener('submit', function(e) {
            const requiredFields = ['first_name', 'last_name', 'email'];
            let isValid = true;
            
            requiredFields.forEach(field => {
                const input = document.getElementById(field);
                if (!input.value.trim()) {
                    input.classList.add('is-invalid');
                    isValid = false;
                } else {
                    input.classList.remove('is-invalid');
                    input.classList.add('is-valid');
                }
            });
            
            if (!isValid) {
                e.preventDefault();
                alert('Vul alle verplichte velden in (gemarkeerd met *)');
            }
        });
    </script>
</body>
</html>
