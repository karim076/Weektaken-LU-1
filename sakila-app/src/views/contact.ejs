<%- include('partials/header', { title: 'Contact - Sakila App' }) %>

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="text-center mb-5">
                <h1 class="display-4 text-primary">Contact</h1>
                <p class="lead text-muted">Neem contact met ons op voor vragen of ondersteuning</p>
            </div>

            <div class="row g-4">
                <div class="col-md-6">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-body p-4">
                            <div class="text-center mb-3">
                                <div class="bg-primary text-white rounded-circle d-inline-flex align-items-center justify-content-center" style="width: 60px; height: 60px;">
                                    <i class="bi bi-geo-alt fs-4"></i>
                                </div>
                            </div>
                            <h5 class="card-title text-center">Bezoekadres</h5>
                            <p class="card-text text-center text-muted">
                                123 Film Street<br>
                                1234 AB Movie City<br>
                                Nederland
                            </p>
                        </div>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-body p-4">
                            <div class="text-center mb-3">
                                <div class="bg-success text-white rounded-circle d-inline-flex align-items-center justify-content-center" style="width: 60px; height: 60px;">
                                    <i class="bi bi-telephone fs-4"></i>
                                </div>
                            </div>
                            <h5 class="card-title text-center">Telefoon</h5>
                            <p class="card-text text-center text-muted">
                                <strong>Algemeen:</strong> +31 (0)20 123 4567<br>
                                <strong>Support:</strong> +31 (0)20 123 4568<br>
                                <small>Ma-Vr: 09:00 - 18:00</small>
                            </p>
                        </div>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-body p-4">
                            <div class="text-center mb-3">
                                <div class="bg-info text-white rounded-circle d-inline-flex align-items-center justify-content-center" style="width: 60px; height: 60px;">
                                    <i class="bi bi-envelope fs-4"></i>
                                </div>
                            </div>
                            <h5 class="card-title text-center">Email</h5>
                            <p class="card-text text-center text-muted">
                                <strong>Algemeen:</strong> info@sakila-app.nl<br>
                                <strong>Support:</strong> support@sakila-app.nl<br>
                                <strong>Verhuur:</strong> rental@sakila-app.nl
                            </p>
                        </div>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-body p-4">
                            <div class="text-center mb-3">
                                <div class="bg-warning text-dark rounded-circle d-inline-flex align-items-center justify-content-center" style="width: 60px; height: 60px;">
                                    <i class="bi bi-clock fs-4"></i>
                                </div>
                            </div>
                            <h5 class="card-title text-center">Openingstijden</h5>
                            <p class="card-text text-center text-muted">
                                <strong>Maandag - Vrijdag:</strong> 09:00 - 22:00<br>
                                <strong>Zaterdag:</strong> 10:00 - 20:00<br>
                                <strong>Zondag:</strong> 12:00 - 18:00
                            </p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row mt-5">
                <div class="col-12">
                    <div class="card border-0 shadow-sm">
                        <div class="card-body p-4">
                            <h4 class="card-title text-center mb-4">Stuur ons een bericht</h4>
                            <form id="contactForm">
                                <div class="row g-3">
                                    <div class="col-md-6">
                                        <label for="name" class="form-label">Naam *</label>
                                        <input type="text" class="form-control" id="name" name="name" required>
                                    </div>
                                    <div class="col-md-6">
                                        <label for="email" class="form-label">Email *</label>
                                        <input type="email" class="form-control" id="email" name="email" required>
                                    </div>
                                    <div class="col-12">
                                        <label for="subject" class="form-label">Onderwerp *</label>
                                        <select class="form-select" id="subject" name="subject" required>
                                            <option value="">Kies een onderwerp...</option>
                                            <option value="general">Algemene vraag</option>
                                            <option value="rental">Verhuur vraag</option>
                                            <option value="technical">Technische ondersteuning</option>
                                            <option value="complaint">Klacht</option>
                                            <option value="compliment">Compliment</option>
                                        </select>
                                    </div>
                                    <div class="col-12">
                                        <label for="message" class="form-label">Bericht *</label>
                                        <textarea class="form-control" id="message" name="message" rows="5" placeholder="Typ hier uw bericht..." required></textarea>
                                    </div>
                                    <div class="col-12 text-center">
                                        <button type="submit" class="btn btn-primary btn-lg px-5">
                                            <i class="bi bi-send me-2"></i>Verstuur Bericht
                                        </button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row mt-5">
                <div class="col-12">
                    <div class="alert alert-info">
                        <h5 class="alert-heading">
                            <i class="bi bi-info-circle me-2"></i>Veelgestelde vragen
                        </h5>
                        <p class="mb-0">
                            Bekijk onze <a href="/help" class="alert-link">Help pagina</a> voor antwoorden op veelgestelde vragen over het huren van films, account beheer en technische ondersteuning.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('partials/footer') %>

<script>
// Contact form handling
document.getElementById('contactForm').addEventListener('submit', function(e) {
    e.preventDefault();
    
    // Simple form validation feedback
    const name = document.getElementById('name').value;
    const email = document.getElementById('email').value;
    const subject = document.getElementById('subject').value;
    const message = document.getElementById('message').value;
    
    if (name && email && subject && message) {
        // Show success message
        const alertDiv = document.createElement('div');
        alertDiv.className = 'alert alert-success alert-dismissible fade show mt-3';
        alertDiv.innerHTML = `
            <i class="bi bi-check-circle me-2"></i>
            <strong>Bedankt!</strong> Uw bericht is verzonden. We nemen binnen 24 uur contact met u op.
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        `;
        
        // Insert alert before the form
        this.parentNode.insertBefore(alertDiv, this);
        
        // Reset form
        this.reset();
        
        // Remove alert after 5 seconds
        setTimeout(() => {
            if (alertDiv.parentNode) {
                alertDiv.parentNode.removeChild(alertDiv);
            }
        }, 5000);
    }
});
</script>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
