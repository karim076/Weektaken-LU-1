<!DOCTYPE html>
<html lang="nl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard - Sakila App</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet">
</head>
<body class="bg-light">
    <%- include('partials/navbar') %>
    
    <div class="container mt-4">
        <!-- Welcome Header -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="bg-primary text-white rounded p-4">
                    <h1 class="mb-2">
                        <i class="bi bi-speedometer2"></i>
                        Welkom, <%= user.fullName || user.username %>!
                    </h1>
                    <p class="mb-0">
                        <span class="badge bg-light text-dark">
                            <%= user.userType.charAt(0).toUpperCase() + user.userType.slice(1) %>
                        </span>
                        Dashboard - Beheer je account en activiteiten
                    </p>
                </div>
            </div>
        </div>

        <!-- Role-specific Dashboard -->
        <% if (user.userType === 'owner') { %>
            <!-- Owner Dashboard -->
            <div class="row g-4">
                <div class="col-md-6 col-lg-3">
                    <div class="card text-center h-100">
                        <div class="card-body">
                            <i class="bi bi-people-fill text-primary mb-3" style="font-size: 3rem;"></i>
                            <h5>Personeel</h5>
                            <p class="text-muted">Beheer staff leden</p>
                            <a href="/admin/staff" class="btn btn-primary">Beheren</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 col-lg-3">
                    <div class="card text-center h-100">
                        <div class="card-body">
                            <i class="bi bi-graph-up text-success mb-3" style="font-size: 3rem;"></i>
                            <h5>Rapporten</h5>
                            <p class="text-muted">Bekijk statistieken</p>
                            <a href="/admin/reports" class="btn btn-success">Bekijken</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 col-lg-3">
                    <div class="card text-center h-100">
                        <div class="card-body">
                            <i class="bi bi-box text-info mb-3" style="font-size: 3rem;"></i>
                            <h5>Voorraad</h5>
                            <p class="text-muted">Beheer inventory</p>
                            <a href="/admin/inventory" class="btn btn-info">Beheren</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 col-lg-3">
                    <div class="card text-center h-100">
                        <div class="card-body">
                            <i class="bi bi-shop text-warning mb-3" style="font-size: 3rem;"></i>
                            <h5>Winkels</h5>
                            <p class="text-muted">Beheer locaties</p>
                            <a href="/admin/stores" class="btn btn-warning">Beheren</a>
                        </div>
                    </div>
                </div>
            </div>
        <% } else if (user.userType === 'staff') { %>
            <!-- Staff Dashboard -->
            <div class="row g-4">
                <div class="col-md-6 col-lg-4">
                    <div class="card text-center h-100">
                        <div class="card-body">
                            <i class="bi bi-person-plus-fill text-primary mb-3" style="font-size: 3rem;"></i>
                            <h5>Nieuwe Klant</h5>
                            <p class="text-muted">Registreer nieuwe klant</p>
                            <a href="/customers/create" class="btn btn-primary">Toevoegen</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 col-lg-4">
                    <div class="card text-center h-100">
                        <div class="card-body">
                            <i class="bi bi-people text-success mb-3" style="font-size: 3rem;"></i>
                            <h5>Klanten</h5>
                            <p class="text-muted">Beheer klantgegevens</p>
                            <a href="/customers" class="btn btn-success">Beheren</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 col-lg-4">
                    <div class="card text-center h-100">
                        <div class="card-body">
                            <i class="bi bi-collection-play text-info mb-3" style="font-size: 3rem;"></i>
                            <h5>Films</h5>
                            <p class="text-muted">Beheer filminventaris</p>
                            <a href="/films" class="btn btn-info">Bekijken</a>
                        </div>
                    </div>
                </div>
            </div>
        <% } else { %>
            <!-- Customer Dashboard -->
            <div class="row g-4">
                <div class="col-md-6 col-lg-4">
                    <div class="card text-center h-100">
                        <div class="card-body">
                            <i class="bi bi-search text-primary mb-3" style="font-size: 3rem;"></i>
                            <h5>Films Zoeken</h5>
                            <p class="text-muted">Vind je favoriete films</p>
                            <a href="/films" class="btn btn-primary">Zoeken</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 col-lg-4">
                    <div class="card text-center h-100">
                        <div class="card-body">
                            <i class="bi bi-clock-history text-success mb-3" style="font-size: 3rem;"></i>
                            <h5>Verhuurgeschiedenis</h5>
                            <p class="text-muted">Bekijk je verhalen</p>
                            <a href="/rentals/history" class="btn btn-success">Bekijken</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 col-lg-4">
                    <div class="card text-center h-100">
                        <div class="card-body">
                            <i class="bi bi-person-gear text-info mb-3" style="font-size: 3rem;"></i>
                            <h5>Profiel</h5>
                            <p class="text-muted">Beheer je account</p>
                            <a href="/profile" class="btn btn-info">Bewerken</a>
                        </div>
                    </div>
                </div>
            </div>
        <% } %>

        <!-- Recent Activity -->
        <div class="row mt-5">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">
                            <i class="bi bi-activity"></i>
                            Recente Activiteit
                        </h5>
                    </div>
                    <div class="card-body">
                        <p class="text-muted text-center py-4">
                            <i class="bi bi-info-circle"></i>
                            Geen recente activiteit gevonden. Begin met het verkennen van de applicatie!
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <%- include('partials/footer') %>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
