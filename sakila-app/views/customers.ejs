<!DOCTYPE html>
<html lang="nl">
<head>
  <meta charset="UTF-8">
  <title>Klantenoverzicht</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <!-- Navigatiebalk -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">Sakila App</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" href="/">Home</a>
          </li>
          <li class="nav-item">
            <a class="nav-link active" aria-current="page" href="/customers">Klanten</a>
          </li>
          <!-- Later kun je hier extra menu-items toevoegen -->
          <li class="nav-item">
            <a class="nav-link disabled">Films (coming soon)</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <!-- Pagina-inhoud -->
  <div class="container mt-4">
    <h1>Klantenoverzicht</h1>
    <table class="table table-striped table-hover">
      <thead class="table-dark">
        <tr>
          <th>ID</th><th>Voornaam</th><th>Achternaam</th><th>Email</th>
        </tr>
      </thead>
      <tbody>
        <% customers.forEach(c => { %>
          <tr>
            <td><%= c.customer_id %></td>
            <td><%= c.first_name %></td>
            <td><%= c.last_name %></td>
            <td><%= c.email %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
